@page
@model WebApp.Pages.LoginModel
@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="text-center">
    <form class="w-100" style="max-width: 400px; margin: auto;">
        <div class="mb-3">
            <label for="email" class="form-label">Đăng nhập</label>
            <input type="email" class="form-control" id="email" placeholder="Nhập địa chỉ email">
        </div>
        <div class="mb-3">
            <input type="password" class="form-control" id="password" placeholder="Nhập mật khẩu">
        </div>
        <button type="submit" class="btn btn-primary">Đăng nhập</button>
        <a href="#" class="btn btn-link">Quên mật khẩu</a>
        <a href="#" class="btn btn-link">Đăng ký</a>
    </form>
</div>


